{
    "extends": "airbnb-base",
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "plugins": [
        "mocha"
    ],
    "env": {
        "es6": true,
        "jest": true,
        "mocha": true
    },
    "rules": {
        "linebreak-style": 0,
        "global-require": "off",
        "import/no-dynamic-require": "off",
        "no-plusplus": "off",
        "radix": "off",
        "indent": [
            "error",
            4,
            {
                "SwitchCase": 1
            }
        ],
        "max-len": [
            "warn",
            200
        ],
        "no-multi-assign": "off",
        "no-use-before-define": [
            "error",
            {
                "variables": false,
                "functions": false,
                "classes": false
            }
        ],
        "no-multiple-empty-lines": [
            "error",
            {
                "max": 3
            }
        ],
        "comma-dangle": [
            "error",
            "always-multiline",
            {
                "functions": "ignore"
            }
        ],
        "arrow-parens": [
            "warn",
            "as-needed"
        ],
        "padded-blocks": [
            "error",
            {
                "classes": "always"
            }
        ],
        "no-console": [
            "error",
            {
                "allow": [
                    "warn",
                    "error"
                ]
            }
        ],
        "no-unused-vars": [
            "warn",
            {
                "args": "none"
            }
        ]
    }
}